extends layout

block content
	div#news-article-list.box
		h2 Arch Linux ニュースアーカイブ
		div.pagination
			p 記事数: !{news[0].count}。ページ: !{page}/!{total}。
			p.news-nav
				- if(prevp != 0){
				span.prev
					a(href="?page=" + prevp, title="前のページヘ") &lt; 前
				- }else{
				span.prev &lt; 前
				- } if(nextp != 0){
				span.next
					a(href="?page=" + nextp, title="次のページヘ") 次 &gt;
				- }else{
				span.next 次 &gt;
				- }
		table#article-list.results
			thead
				tr
					th 公開日
					th 題名
					th 著者
			tbody
				- var odd = false; if(news[0].count != 0){ news.forEach(function(article){ odd = odd ? false : true;
				tr(class=odd?"odd":"even")
					td= article.created
					td.wrap
						a(href="/news/" + article.url + "/", title ="見る: " + article.headline)= article.headline
					td= article.author
				- }) }
